journal = {Animal Behaviour},
keywords = {Behavioural development,Fathering,Gasterosteus aculeatus,Maternal effect,Parental effect,Paternal care,Phenotypic plasticity,Predation risk,Transgenerational plasticity},
mendeley-groups = {Thesis (1)},
pages = {165--171},
publisher = {Elsevier Ltd},
title = {{Paternal programming in sticklebacks}},
url = {http://dx.doi.org/10.1016/j.anbehav.2014.07.010},
volume = {95},
year = {2014}
}
@article{Bell2016,
abstract = {Stressors experienced by parents can influence the behavioral development of their offspring. Here, we review recent studies in threespined sticklebacks (a species in which males are the sole providers of parental care) showing that when parents are exposed to an ecologically relevant stressor (predation risk), there are consequences for offspring. For example, female sticklebacks exposed to predation risk produce eggs with higher concentrations of cortisol, a stress hormone, and offspring with altered behavior and physiology. Male sticklebacks exposed to predation risk produce offspring that are less active, smaller, and in poorer condition. The precise mechanisms by which maternal and paternal experiences with predators affect offspring phenotypes are under investigation, and could include steroid hormones, olfactory cues and/or parental behavior. As in other species, some of the consequences of parental exposure to predation risk for offspring in sticklebacks might be adaptive, but depend on the stressor, the reliability of the parental and offspring environments and the evolutionary history of the population.},
author = {Bell, Alison M. and McGhee, Katie E. and Stein, Laura R.},
doi = {10.1016/j.cobeha.2015.10.011},
file = {:C\:/Users/Spenc/Desktop/Thesis Papers/Bell-2016-Effects-of-mothers-and-fathers-expe.pdf:pdf},
issn = {23521546},
journal = {Current Opinion in Behavioral Sciences},
mendeley-groups = {Thesis (1)},
pages = {28--32},
publisher = {Elsevier Ltd},
title = {{Effects of mothers' and fathers' experience with predation risk on the behavioral development of their offspring in threespined sticklebacks}},
url = {http://dx.doi.org/10.1016/j.cobeha.2015.10.011},
volume = {7},
