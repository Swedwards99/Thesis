doi = {10.1186/1471-2148-13-277},
file = {:C\:/Users/Spenc/Downloads/Mcgee-2013-Functional-basis-of-ecological-dive.pdf:pdf},
issn = {14712148},
journal = {BMC Evolutionary Biology},
keywords = {Ecological speciation,Functional morphology,Gasterosteus aculeatus,Postglacial fishes,Suction feeding},
number = {1},
pages = {1--10},
pmid = {24380474},
title = {{Functional basis of ecological divergence in sympatric stickleback}},
