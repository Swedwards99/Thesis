keywords = {behavioral flexibility,copying,ecological niche innovation,invasive species,neophobia,plasticity,social learning},
number = {4},
pages = {393--404},
title = {{Behavioral flexibility and species invasions: The adaptive flexibility hypothesis}},
volume = {22},
year = {2010}
